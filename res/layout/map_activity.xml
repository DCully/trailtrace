<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map_activity_layout"
    android:launchMode="singleTop"
    android:theme="@style/TranslucentActionBarTheme"
    tools:context="com.coolhandsoftware.trailtrace.MapActivity" >

    <!-- this fragment's views are defined programmatically, in the MapFragment class -->
    <fragment 
        android:id="@+id/map_fragment"
        android:name="com.coolhandsoftware.trailtrace.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    
    
    <!-- this fragment's views are defined in XML, in the route_draw_fragment.xml file
        		   which gets inflated by the RouteDrawFragment in onCreateView -->
    <fragment 
        android:id="@+id/route_draw_fragment"
        android:name="com.coolhandsoftware.trailtrace.RouteDrawFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
